<flynt-component name="SiteFooter">
  <footer class="site-footer">
    <div class="container">
      <div class="footer-main">
        <div class="footer-brand">
          <a href="{{ function('home_url') }}" class="logo logo--light">
            {% if logo_image %}
              <img src="{{ logo_image.url|default(function('wp_get_attachment_image_url', logo_image, 'full')) }}" alt="" width="40" height="40">
            {% endif %}
            <span>{{ tagline|default('Lightly Salted') }}</span>
          </a>
          {% if description %}
            <p>{{ description }}</p>
          {% endif %}
          {% if social_links %}
            <div class="footer-social">
              {% for link in social_links %}
                <a href="{{ link.url }}" aria-label="{{ link.platform|e }}" rel="noopener noreferrer" target="_blank">
                  {% if link.platform == 'LinkedIn' %}
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
                  {% elseif link.platform == 'Twitter' %}
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                  {% else %}
                    <span>{{ link.platform }}</span>
                  {% endif %}
                </a>
              {% endfor %}
            </div>
          {% endif %}
        </div>
        {% if nav_groups %}
          <nav class="footer-nav">
            {% for group in nav_groups %}
              <div class="footer-nav-group">
                {% if group.heading %}
                  <h4>{{ group.heading }}</h4>
                {% endif %}
                {% if group.links %}
                  <ul>
                    {% for link in group.links %}
                      <li><a href="{{ link.url }}">{{ link.label }}</a></li>
                    {% endfor %}
                  </ul>
                {% endif %}
                {% if group.contact_address %}
                  <address>{{ group.contact_address|raw }}</address>
                {% elseif group.heading == 'Contact' and contact_details is defined %}
                  <address>
                    {% if contact_details.phone_number %}
                      <p>
                        <a href="tel:{{ contact_details.phone_number|replace({' ': ''}) }}">
                          {{ contact_details.phone_number }}
                        </a>
                      </p>
                    {% endif %}
                    {% if contact_details.contact_email %}
                      <p>
                        <a href="mailto:{{
                          contact_details.contact_email
                        }}">{{ contact_details.contact_email }}</a>
                      </p>
                    {% endif %}
                    {% if contact_details.sales_email %}
                      <p>
                        <a href="mailto:{{
                          contact_details.sales_email
                        }}">{{ contact_details.sales_email }}</a>
                      </p>
                    {% endif %}
                    {% if contact_details.support_email %}
                      <p>
                        <a href="mailto:{{
                          contact_details.support_email
                        }}">{{ contact_details.support_email }}</a>
                      </p>
                    {% endif %}
                  </address>
                {% endif %}
              </div>
            {% endfor %}
          </nav>
        {% endif %}
      </div>
      <div class="footer-bottom">
        {% if footer_badges %}
          <div class="footer-badges">
            {% for badge in footer_badges %}
              <span class="footer-badge">{{ badge.text }}</span>
            {% endfor %}
          </div>
        {% endif %}
        <div class="footer-legal">
          {% if copyright %}
            <p>{{ copyright }}</p>
          {% endif %}
          {% if legal_links %}
            <nav>
              {% for link in legal_links %}
                <a href="{{ link.url }}">{{ link.label }}</a>
              {% endfor %}
            </nav>
          {% endif %}
        </div>
      </div>
    </div>
  </footer>
</flynt-component>
